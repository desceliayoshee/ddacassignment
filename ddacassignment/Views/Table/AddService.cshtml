@model IEnumerable<ddacassignment.Models.ServicesEntity>
@{
    ViewData["Title"] = "AddService";
}
<style>
    body {
        font-family: 'lato', sans-serif;
    }

    .container {
        max-width: 1120px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 10px;
        padding-right: 10px;
    }

    th {
        background-color: #63dfc5;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        padding: 20px;
    }

    tr {
        background-color: #ffffff;
        box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.1);
    }

    td {
        padding: 20px;
    }
</style>
<h1>View Service Table</h1>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table border="1">
        <tr>
            <th>Service Name</th>
            <th>Service Company</th>
            <th>Service Schedule</th>
            <th>Service Price</th>
            <th> Action </th>
            <th> Action </th>
        </tr>
        @foreach (var service in Model)
                {
    <tr>
        <td style="width:15%">@service.PartitionKey</td>
        <td style="width:15%">@service.RowKey</td>
        <td style="width:15%">@service.Schedule</td>
        <td style="width:15%">@service.Price</td>

        <td style="width:15%">
            <a asp-route-pkey="@service.PartitionKey" asp-route-rkey="@service.RowKey" asp-action="deletedata" asp-controller="Table">
                <button>Delete Service</button>
            </a>
        </td>
        <td style="width:15%">
            <a asp-route-pkey="@service.PartitionKey" asp-route-rkey="@service.RowKey" asp-action="editdata" asp-controller="Table">
                <button>Edit Service</button>
            </a>
        </td>
    </tr>
                }
    </table>
}