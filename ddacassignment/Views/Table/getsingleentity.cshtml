@model ddacassignment.Models.ServicesEntity
@{
    ViewData["Title"] = "getsingleentity";
}
<style>
    body {
        font-family: 'lato', sans-serif;
    }

    .container {
        max-width: 1120px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 10px;
        padding-right: 10px;
    }

    th {
        background-color: #63dfc5;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        padding: 20px;
    }

    tr {
        background-color: #ffffff;
        box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.1);
    }

    td {
        padding: 20px;
    }
</style>

<h1>Schedule Result</h1>

<table border=1>
    <tr>
        <th style="width:15%"> Service Name </th>
        <th style="width:15%"> Company </th>
        <th style="width:15%"> Schedule </th>
        <th style="width:15%"> Price </th>
        <th style="width:15%"> Action </th>
    </tr>
    <tr>
        <td style="width:15%"> @Model.PartitionKey</td>
        <td style="width:15%"> @Model.RowKey</td>
        <td style="width:15%"> @Model.Schedule</td>
        <td style="width:15%"> @Model.Price</td>
        <td style="width:15%">
            <a asp-route-pkey="@Model.PartitionKey" asp-route-rkey="@Model.RowKey" asp-action="bookdata" asp-controller="Table">
                <button>Book Slot?</button>
            </a>
        </td>
    </tr>
</table>

