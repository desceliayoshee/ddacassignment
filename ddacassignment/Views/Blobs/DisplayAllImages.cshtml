<h2>Images</h2>
<ul>
    @foreach (var item in Model)
     {
        string[] imageinformation = item.Split('#');
    <li>
        <img src="@imageinformation[1]" width="200" height="150" />
        &nbsp; &nbsp;&nbsp;
        <label style="color:red">@imageinformation[0]</label>
        &nbsp; &nbsp;&nbsp;
        
        <a asp-action="DownloadImage" asp-route-imagename="@imageinformation[0]"> Download</a>

    </li>
     }
</ul>

@if(ViewBag.msg != null)
            {
                <script>alert("@ViewBag.msg");</script>
            }