
@{
    ViewData["Title"] = "UploadFiles";
}

<h1>Upload Images</h1>

<center>

    @*<form method="post" asp-controller="Blobs" asp-action="UploadFiles"
        enctype="multipart/form-data">*@
    <form method="post" asp-controller="Blobs" asp-action="UploadFiles"
          enctype="multipart/form-data">
        <br />
        <br />
        <input type="file" name="files" accept="image/*, .txt" multiple />
        <br />
        <br />
        <input type="submit" value="Upload File Now" />
    </form>
</center>

@if (ViewBag.mssg != null)
            {
                <script>alert("@ViewBag.msg"); </script>
            }
