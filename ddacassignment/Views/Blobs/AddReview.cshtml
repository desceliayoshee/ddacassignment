@model ddacassignment.Models.ReviewEntity

@{
    ViewData["Title"] = "AddReview";
}

<h1>AddReview</h1>

<h4>Review Entity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSingleEntity2" asp-controller="Blobs" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="PartitionKey" class="form-control" />
                <span asp-validation-for="PartitionKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Service Company</label>
                <input asp-for="RowKey" class="form-control" />
                <span asp-validation-for="RowKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4" cols="50">
                </textarea>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFilee" class="control-label">Image</label>
                <input type="file" asp-for="ImageFilee" name="ImageFilee" accept="image/*, *txt" multiple  />
                <span asp-validation-for="ImageFilee" class="text-danger"></span>
            </div>
                <br />
                <br />
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

