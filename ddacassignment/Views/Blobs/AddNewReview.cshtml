@model ddacassignment.Models.ReviewEntity

@{
    ViewData["Title"] = "AddNewReview";
}

<h1>Add New Review</h1>

<h4>Review Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSingleEntity2" method="post" asp-controller="Blobs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="PartitionKey" class="form-control" required />
                <span asp-validation-for="PartitionKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Service Company</label>
                <input asp-for="RowKey" class="form-control" required />
                <span asp-validation-for="RowKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4" cols="50" required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" required/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <br />
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" runat="server" />
            </div>
        </form>
    </div>
</div>


